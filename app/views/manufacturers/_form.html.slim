= form_for(@manufacturer) do |f|
  - if @manufacturer.errors.any?
    #error_explanation
      h2
        = pluralize(@manufacturer.errors.count, "error")
        |  prohibited this role from being saved:
      ul
        - @manufacturer.errors.full_messages.each do |message|
          li
            = message
  .form-group
    = f.label :name
    br
    = f.text_field :name, class: "form-control"
  = f.submit class: "btn btn-primary mb-4"
  #models.form-group
    .links
      = link_to_add_association 'Add Model', f, :models, class: "btn btn-primary mb-2", data: { association_insertion_method: "after" }
    = f.fields_for :models do |model|
      = render 'model_fields', f: model
